{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": "./",
    "paths": {
      "*": ["node_modules/*"],
    },
    "typeRoots": ["./node_modules/@types", "./node_modules/react-icons"]
  },
  "include": [
    "src/**/*"
  ],
   "ignore": ["src/pages/Chat/**/*.tsx", "src/pages/Chat/*.ts", "src/pages/chat/*.ts", "src/pages/chat/*.tsx"],
}

//  "ignore": ["src/pages/Chat/**/*.tsx", "src/pages/Chat/**/*.ts"]

